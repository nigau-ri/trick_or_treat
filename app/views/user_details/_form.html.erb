<div class='account-page__inner--right user-form'>
  <%= form_with model: [current_user, @user_detail], local: true do |f|%>
    <div class='field'> 
      <div class='field-label'>
        <%= f.label :age%>
      </div>
      <div class='field-input'>
        <%= f.select :age, 20..200, {include_blank: '---'}%>
      </div>
    </div>
    <div class='field'>
      <div class='field-label'>
        <%= f.label :gender_id%>
      </div>
      <div class='field-input'>
        <%= f.collection_select(:gender_id, Gender.all, :id, :name, {include_blank: '---'})%>
      </div>
    </div>
    <div class='field'>
      <div class='field-label'>
        <%= f.label :prefecture_id%>
      </div>
      <div class='field-input'>
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {include_blank: '---'})%>
      </div>
    </div>
    <div class='field'>
      <div class='field-label'>
        <%= f.label :city%>
      </div>
      <div class='field-input'>
        <%= f.text_field :city%>
      </div>
    </div>
    <div class='field'>
      <div class='field-label'>
        <%= f.label :hobby%>
      </div>
      <div class='field-input'>
        <%= f.text_field :hobby%>
      </div>
    </div>
    <div class='actions'>
      <% if current_user.user_detail.present? %>
        <%= f.submit "Update", class: 'btn'%>
      <% else %>
        <%= f.submit "Create", class: 'btn'%>
      <% end %>
    </div>
  <% end %>
</div>