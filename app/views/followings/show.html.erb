<%= render "shared/header" %>

<div class="users-list-header">
  <h4 class="mt-4"><%= @following_user.nickname %>さんにタグをつける</h4>
</div>

<%= form_with(model: [@following, @following_tag], local: true, class: 'create-following-tag-form') do |f| %>
  <%= render 'shared/error_messages', model: f.object %>
  <%= f.label :name, 'タグをつける' %><br>
  <div class="input-group mt-1">
    <div class="col-2">
      <%= f.text_field :name, class:'form-control' %>
    </div>
    <span>
      <%= f.submit '追加', class:'btn btn-primary mx-2'%>
    </span>
  </div>
<% end %>

<div class="container">
  <ul class="following-users-list">
    <li class="following-user-list-item"> 
      <%= @following_user.nickname %>
      <div class="added-following-tag">
        <% @following.following_tags.each do |tag| %>
          <div class="following-tag-item"># <%= tag.name %></div>
        <% end %>
      </div>
    </li>
  </ul>
</div>

<%= render "shared/footer" %>